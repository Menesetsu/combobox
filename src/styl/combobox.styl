.comboBox {
	box-sizing: border-box;
	position: relative;
	display: inline-block;
	vertical-align: middle;
	width: 100%;
}

.comboBox .selectBox {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.comboBox--input {
	position: relative;
}
.comboBox .selectBox--arrow {
	z-index: 2;
}