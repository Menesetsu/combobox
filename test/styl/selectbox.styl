.selectBox--inner {
	position: relative;
	padding: 0 16px 0 0;
	cursor: pointer;
	line-height: 20px;
	height: 100%;
}
.selectBox select {
	display: none;
}
.selectBox--label {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	display: block;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	text-overflow: ellipsis;
	padding: 0 6px 0 6px;
	min-width: 52px;
	color: #fff;
}
.selectBox--arrow {
	position: absolute;
	top: 1px;
	bottom: 1px;
	right: 1px;
	display: inline-block;
	vertical-align: middle;
	width: 16px;
}

.selectBox--arrow {
	height:10px;
	width:10px;
	top:50%;
	right:5px;
	margin-top:-5px;
	background:#000;
}

